<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
 >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/ViewResults"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="ViewResults"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/ViewInstituteResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ViewResults"
        android:text="ViewInstituteResults"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/CourseDetails"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ViewResults"
        android:text="What is the course about?"
        android:visibility="invisible"
        android:onClick="viewCourseDetails"
        />

    <Button
        android:id="@+id/CourseLearnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/CourseDetails"
        android:visibility="invisible"
        android:text="What will you learn in this course?"
        android:onClick="viewCourseLearnings"
        />

    <Button
        android:id="@+id/FurtherStudies"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/CourseLearnings"
        android:visibility="invisible"
        android:text="Further Studies"
        android:onClick="viewFurtherStudies"/>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView11"
        android:layout_marginStart="128dp"
        app:srcCompat="@drawable/learnings" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="104dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/furtherstudies" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView13"
        android:layout_marginStart="29dp"
        android:text="About"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_toEndOf="@+id/textView16"
        android:text="Learnings"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_below="@+id/imageView11"
        android:text="Further Studies"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:text="Click to find out more!"
        android:textColor="#FFFFFF" />


</RelativeLayout>